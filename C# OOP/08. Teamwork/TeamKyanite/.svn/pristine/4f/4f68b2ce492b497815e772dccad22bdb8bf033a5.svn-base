<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="TeamKyanite.AdminMainWindow"
        Title="Main Window" Height="750" Width="970" Style="{StaticResource MyWindowBackground}" >
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource NavigationButtonStyle}" />
    </Window.Resources>
    <DockPanel LastChildFill="False">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Content="Create School" Click="CreateSchool_Click"/>
            <Button Content="View Classes (IDs)" Click="ViewClasses_Click"/>
            <Button Content="View Students (all)" Click="ViewAllStudents_Click"/>
            <Button Content="Queries" Click="Queries_Click"/>
            <Button Content="Delete All" Click="DeleteAll_Click"/>            
        </StackPanel>
        <TextBlock Margin="20" HorizontalAlignment="Center" FontSize="27" FontFamily="Verdana" FontWeight="Bold" DockPanel.Dock="Top">Welcome to School</TextBlock>

        <Image Width="350" DockPanel.Dock="Top" Margin ="40" HorizontalAlignment="Center">
            <Image.Source>
                <BitmapImage DecodePixelWidth="2208"
                             UriSource="Resources\Apple-Notebooks-Blackboard.png" />
            </Image.Source>
        </Image>

        <Button Content="Exit" Click="ExitButton_Click" DockPanel.Dock="Bottom" IsCancel="True"/>
    </DockPanel>    
</Window>
