<Window x:Class="TeamKyanite.Queries"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Queries" Height="398.75" Width="623.629" Style="{StaticResource MyWindowBackground}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="116*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="319*"/>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="339*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Get Info" HorizontalAlignment="Left" Margin="137,15.741,0,0" VerticalAlignment="Top" Width="52" Height="23" Grid.Column="1" Grid.Row="1"/>
        <Label Content="Get student info by username" HorizontalAlignment="Left" VerticalAlignment="Top" Width="169" Margin="10,10,0,0" Height="26" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="0,15.741,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.003,-0.767" GotFocus="Username_GotFocus" Grid.Column="1" Grid.Row="1" />
        <TextBlock Grid.Column="3" HorizontalAlignment="Left" Margin="28,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="179" Width="240" Grid.Row="1" Name="ViewData"/>
        <Button Content="Clear" Grid.Column="3" HorizontalAlignment="Left" Margin="221,213,0,0" Grid.Row="1" VerticalAlignment="Top" Width="47" Click="ClearButton"/>
        <Label Content="Sort students by sex" Grid.Column="1" HorizontalAlignment="Left" Margin="0,44,0,0" Grid.Row="1" VerticalAlignment="Top" Width="137"/>
        <RadioButton Content="males" Grid.Column="1" HorizontalAlignment="Left" Margin="0,70,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <RadioButton Content="females" Grid.Column="1" HorizontalAlignment="Left" Margin="63,70,0,0" Grid.Row="1" VerticalAlignment="Top" />
        <Button Content="Sort" Grid.Column="1" HorizontalAlignment="Left" Margin="137,64,0,0" Grid.Row="1" VerticalAlignment="Top" Width="52"/>
        <Slider Grid.Column="1" HorizontalAlignment="Left" Margin="0,119,0,0" Grid.Row="1" VerticalAlignment="Top" Width="88" Name="SliderYears" Minimum="10" Maximum="16"/>
        <Label Content="Show students at this age" Grid.Column="1" HorizontalAlignment="Left" Margin="0,91,0,0" Grid.Row="1" VerticalAlignment="Top" Width="150"/>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="93,119,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding ElementName=SliderYears,Path=Value,StringFormat={}{0:#}}" VerticalAlignment="Top" Width="27"/>
        <Button Content="Show" Grid.Column="1" HorizontalAlignment="Left" Margin="137,119,0,0" Grid.Row="1" VerticalAlignment="Top" Width="52" RenderTransformOrigin="-0.274,0.577"/>
    </Grid>
</Window>
