<Window x:Class="TeamKyanite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Awesome School" Height="600" Width="600">    
    <StackPanel Margin="10, 10" Background="Sienna">
        <StackPanel.Resources>
            
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="15"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Width" Value="160"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Height" Value="40"/>
            </Style>
        </StackPanel.Resources>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" FontSize="20" FontWeight="Bold">A Great School App</TextBlock>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="25" VerticalAlignment="Center" FontSize="15" FontWeight="Bold">Menu</TextBlock>
        <Button Content="Create School (Automatic)" Click="Button1_Click"/>
        <Button Content="Create Class (Manual)" Click="Button2_Click"/>
        <Button Content="Modify School Class" Click="Button3_Click"/>
        <Button Content="Delete All" Click="Button4_Click"/>
    </StackPanel>
</Window>
