<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="TeamKyanite.MainWindow"
        Title="Awesome School" Height="620" Width="600">
    <StackPanel Margin="10, 10" Background="Sienna">
        <StackPanel.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="15"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Width" Value="160"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Height" Value="40"/>
            </Style>
        </StackPanel.Resources>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"><Run Text="A Great School App"/></TextBlock>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="25" VerticalAlignment="Center" FontSize="15" FontWeight="Bold"><Run Text="Menu"/></TextBlock>
        <Button Content="Create School (Automatic)" Click="Button1_Click"/>
        <Button Content="Create Class (Manual)" Click="Button2_Click"/>
        <Button Content="View Classes (IDs)" Click="Button3_Click"/>
        <Button Content="View Students (all)" Click="Button4_Click"/>
        <Button Content="Delete All" Click="Button5_Click"/>
        <Button Content="Exit" Click="ExitButton_Click" />
    </StackPanel>
</Window>
