<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="TeamKyanite.MainWindow"
        Title="Awesome School" Height="800" Width="970">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="40"/>
        </Style>
    </Window.Resources>    
    <DockPanel LastChildFill="False" Background="Sienna">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Stretch">                                    
            <Button Content="Create School" Click="Button1_Click"/>
            <Button Content="Create Class" Click="Button2_Click"/>
            <Button Content="View Classes (IDs)" Click="Button3_Click"/>
            <Button Content="View Students (all)" Click="Button4_Click"/>
            <Button Content="Delete All" Click="Button5_Click"/>            
        </StackPanel>
        <TextBlock Margin="20" HorizontalAlignment="Center" FontSize="30" FontFamily="Verdana" FontWeight="Bold" DockPanel.Dock="Top">Welcome to School</TextBlock>

        <Image Width="400" DockPanel.Dock="Top" Margin ="40" HorizontalAlignment="Center">
            <Image.Source>
                <BitmapImage DecodePixelWidth="200"
                             UriSource="Resources\Apple-Notebooks-Blackboard.png" />
            </Image.Source>
        </Image>
        
        <Button Content="Exit" Click="ExitButton_Click" DockPanel.Dock="Bottom"/>
    </DockPanel>    
</Window>
