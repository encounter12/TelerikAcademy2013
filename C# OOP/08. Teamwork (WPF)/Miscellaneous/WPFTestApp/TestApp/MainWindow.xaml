<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Awesome School" Height="500" Width="600" DataContext="">

    <StackPanel Margin="180, 20">
        <StackPanel.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="15"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Width" Value="120"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Height" Value="40"/>
            </Style>
            
        </StackPanel.Resources>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" FontWeight="Bold">A Great School App</TextBlock>
        <Button Content="Create School" Click="Button1_Click"/>
        <Button Content="Display school details" Click="Button2_Click"/>
        <Button Content="Save to database" Click="Button3_Click"/>
        <Button Content="Modify" Click="Button4_Click"/>
        <TextBox Text="{Binding Path=Name}" />
        <DataGrid Name="dataGrid1" ItemsSource="{Binding Path=Students}" />

    </StackPanel>
   
    
</Window>
